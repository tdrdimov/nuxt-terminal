  background: rgba(23, 28, 18, 0.94);

  /* All the single browsers */
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), -moz-radial-gradient(center, ellipse cover, rgba(23, 28, 18, 0.94) 0%, rgba(23, 28, 18, 0.94) 100%) no-repeat;
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(23, 28, 18, 0.94)), color-stop(100%, rgba(23, 28, 18, 0.94)));
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), -webkit-radial-gradient(center, ellipse cover, rgba(23, 28, 18, 0.94) 0%, rgba(23, 28, 18, 0.94) 100%) no-repeat;
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), -o-radial-gradient(center, ellipse cover, rgba(23, 28, 18, 0.94) 0%, rgba(23, 28, 18, 0.94) 100%) no-repeat;
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), -ms-radial-gradient(center, ellipse cover, rgba(23, 28, 18, 0.94) 0%, rgba(23, 28, 18, 0.94) 100%) no-repeat;
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAECAYAAABP2FU6AAAAE0lEQVQIHWP4//8/AxMDFMiDWQA2wAMhzy0v7QAAAABJRU5ErkJggg=="), radial-gradient(ellipse at center, rgba(23, 28, 18, 0.94) 0%, rgba(23, 28, 18, 0.94) 100%) no-repeat;

  .content {
    padding: 15px 15px 0;
  }

  .prompt {
    padding: 0 15px 15px;
  }

  .content,
  .prompt,
  .prompt .input,
  .prompt .input::before {
    color: transparent;
    text-shadow: 0 0 0 #ddd;

    /* Hack to hide the real caret */
    font-weight: 400;
    font-size: 12px;

    @media (min-width: 800px) {
      font-size: 16px;
    }

    line-height: 24px;
    font-family: VT323, monospace, "Lucida Console", Monaco;
    letter-spacing: 1px;
  }

  .prompt .input.show-caret {
    opacity: 0.85;
    caret-color: transparent;
    color: transparent;
    text-shadow: 0 0 0 #ddd;
  }

  .prompt .input::after {
    font-size: 24px;

    @media (min-width: 800px) {
      font-size: 32px;
    }

    position: relative;
    top: 2px;
  }

  .loading::after {
    content: "âš™";
    color: #ddd;
    font-size: 10em;
    border-radius: 10em;
    opacity: 0.4;
  }

  .content ul {
    margin: 0;
  }

  .content ul li {
    list-style-type: none;
  }
}

#message {
  visibility: hidden;
}

.loading-dots {
  z-index: 5;

  .dot {
    display: inline;
    opacity: 0;
    animation: showHideDot 1.5s ease-in-out infinite;

    &.one {
      animation-delay: 0.2s;
    }

    &.two {
      animation-delay: 0.4s;
    }

    &.three {
      animation-delay: 0.6s;
    }
  }
}

@keyframes showHideDot {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 1;
  }

  60% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

////////////////// Hide loading after 3s
.loading-dots {
  -webkit-animation: seconds 1.0s forwards;
  -webkit-animation-iteration-count: 1;
  -webkit-animation-delay: 5s;
  animation: seconds 1.0s forwards;
  animation-iteration-count: 1;
  animation-delay: 3s;
  position: relative;
}

@-webkit-keyframes seconds {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    left: -9999px;
    position: absolute;
  }
}

@keyframes seconds {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    left: -9999px;
    position: absolute;
  }
}
